<form col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="company"/>
    <field name="company"/>
    <group col="-1" colspan="2" id="checkboxes">
        <label name="active"/>
        <field name="active" xexpand="0" width="100"/>
        <label name="template_override"/>
        <field name="template_override" xexpand="0" width="100"/>
    </group>
    <label name="description"/>
    <field name="description" colspan="5"/>
    <notebook colspan="6">
        <page string="General Information" id="general" col="4"> <!-- TODO: better display -> More cols? 8? -->
            <label name="group" colspan="1"/>
            <field name="group" colspan="1"/>
            <label name="sequence" colspan="1"/>
            <field name="sequence" colspan="1"/>
            <label name="start_date" colspan="1"/>
            <group col="-1" id="start_end_date" colspan="1">
                <field name="start_date"/>
                <label name="end_date"/>
                <field name="end_date"/>
            </group>
            <label name="update_unit_price" colspan="1"/>
            <field name="update_unit_price" colspan="1"/>
            <label name="type" colspan="1"/>
            <field name="type" colspan="1" xfill="0" xalign="0"/>
            <newline/>
            <group col="1" id="label_amount_rate" colspan="1" xexpand="0"  yfill="1" xalign="1">
                <label name="amount"/>
                <label name="rate"/>
            </group>
            <group col="3" id="amount_rate">
                <field name="amount" xexpand="1"/>
                <group col="3" id="rate">
                    <field name="rate" factor="100" colspan="2" xexpand="0" xalign="0"/>
                    <label name="rate" string="%" xalign="0.0" xexpand="1"/>
                </group>
            </group>
            <newline/>
            <label name="invoice_account" colspan="1"/>
            <field name="invoice_account" colspan="1"/>
            <label name="credit_note_account" colspan="1"/>
            <field name="credit_note_account" colspan="1"/>
            <field name="childs" colspan="5"
                view_ids="account.tax_view_list"/>
        </page>
        <page name="legal_notice" col="1">
            <field name="legal_notice"/>
        </page>
    </notebook>
</form>
